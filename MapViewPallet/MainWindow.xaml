                                </Button>
                                <Button ToolTip="{DynamicResource MainWindow_Toolbar_DeviceManagement}"
                                        Name="btn_ProductManagement"
                                        ToolBar.OverflowMode="Never"
                                        Margin="5 0"
                                        Click="Btn_ProductManagement_Click">
                                    <iconPacks:PackIconMaterial 
                                        Kind="PackageVariantClosed" />
                                </Button>
                                <Button ToolTip="{DynamicResource MainWindow_Toolbar_BufferManagement}"
                                        Name="btn_BufferManagement"
                                        ToolBar.OverflowMode="Never"
                                        Margin="5 0"
                                        Click="Btn_BufferManagement_Click">
                                    <iconPacks:PackIconMaterial 
                                        Kind="Buffer"/>
                                </Button>
                                <Separator />
                                <Button ToolTip="{DynamicResource MainWindow_Toolbar_UserManagement}"
                                        Name="btn_Statistics"
                                        ToolBar.OverflowMode="Never"
                                        Margin="5 0"
                                        Click="Btn_Statistics_Click">
                                    <iconPacks:PackIconMaterial 
                                        Kind="ChartBar" />
                                </Button>
                                <Separator />
                                <Button ToolTip="{DynamicResource MainWindow_Toolbar_UserManagement}"
                                        Name="btn_UserManagement"
                                        ToolBar.OverflowMode="Never"
                                        Margin="5 0"
                                        Click="Btn_UserManagement_Click">
                                    <iconPacks:PackIconMaterial 
                                        Kind="AccountMultiple"/>
                                </Button>
                                <Separator />
                                <Button 
                                    Name="Reloadallstation" 
                                    ToolBar.OverflowMode="Never"
                                    Margin="5 0"
                                    ToolTip="{DynamicResource MainWindow_Toolbar_Reloadallstation}"
                                    Click="Reloadallstation_Click">
                                    <iconPacks:PackIconMaterial 
                                        Kind="Autorenew"/>
                                </Button>
                                <Separator />
                                <Button 
                                    Name="MoveBuffer"
                                    ToolBar.OverflowMode="Never"
                                    Margin="5 0"
                                    Click="MoveBuffer_Click">
                                    <iconPacks:PackIconMaterial 
                                        Kind="MoveResize"/>
                                </Button>
                                <Separator />
                                <Button 
                                    Name="PlayMusic"
                                    ToolBar.OverflowMode="Never"
                                    Margin="5 0"
                                    Click="PlayMusic_Click">
                                    <iconPacks:PackIconMaterial 
                                        Kind="Music"/>
                                </Button>
                                <Button 
                                    Name="StopMusic"
                                    ToolBar.OverflowMode="Never"
                                    Margin="5 0"
                                    Click="StopMusic_Click">
                                    <iconPacks:PackIconMaterial 
                                        Kind="MusicOff"/>
                                </Button>
                                <Separator />
