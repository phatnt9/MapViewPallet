<Window x:Class="MapViewPallet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapViewPallet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Transparent">
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem Header="_New" />
                        <MenuItem Header="_Open" />
                        <MenuItem Header="_Save" />
                        <Separator />
                        <MenuItem Header="_Exit" />
                    </MenuItem>
                    <MenuItem Header="_Help">
                        <MenuItem Header="_New" />
                        <MenuItem Header="_Open" />
                        <MenuItem Header="_Save" />
                        <Separator />
                        <MenuItem Header="_Exit" />
                    </MenuItem>
                </Menu>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1" Background="AliceBlue">
            <ToolBar>
                <Button Name="btn_AddRect" Width="30" Height="30"
                    Click="btn_AddRect_Click" ToolTip="Add"/>
                <Button Name="btn_moverect" Width="30" Height="30"
                    Click="btn_moverect_Click" ToolTip="Move"/>
                <Button Name="btn_normal" Width="30" Height="30"
                    Click="btn_normal_Click" ToolTip="Normal"/>
                <Button Name="btn_DrawStraght" BorderBrush="Black"
                        BorderThickness="2" Click="btn_DrawStraght_Click" 
                        ToolTip="DrawStraght" Content="Straight"/>
                <Button Name="btn_DrawCurve" BorderBrush="Black"
                        BorderThickness="2" Click="btn_DrawCurve_Click" 
                        ToolTip="Draw Curve" Content="Curve"/>
            </ToolBar>
        </Grid>
        <Grid Grid.Row="2" Background="#E7E7E7" >

            <Border Name="clipBorder" ClipToBounds="True" RenderTransformOrigin="0.5,0.5">
                
                <Canvas RenderTransformOrigin="0.5,0.5" Width="490" Height="335"
                        Name="map" >
                    <Canvas.Background>
                        <DrawingBrush Viewport="0,0,50,50" ViewportUnits="Absolute" TileMode="Tile" >
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <DrawingGroup.Children>
                                        <GeometryDrawing Geometry="M0,0 L50,0">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="2" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                        <GeometryDrawing Geometry="M0,10 L50,10">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="1" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                        <GeometryDrawing Geometry="M0,20 L50,20">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="1" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                        <GeometryDrawing Geometry="M0,30 L50,30">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="1" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                        <GeometryDrawing Geometry="M0,40 L50,40">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="1" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                        <GeometryDrawing Geometry="M0,0 L0,50">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="2" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                        <GeometryDrawing Geometry="M10,0 L10,50">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="1" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                        <GeometryDrawing Geometry="M20,0 L20,50">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="1" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                        <GeometryDrawing Geometry="M30,0 L30,50">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="1" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                        <GeometryDrawing Geometry="M40,0 L40,50">
                                            <GeometryDrawing.Pen>
                                                <Pen Thickness="1" Brush="#D9D9D9" />
                                            </GeometryDrawing.Pen>
                                        </GeometryDrawing>
                                    </DrawingGroup.Children>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Canvas.Background>
                    <Canvas.Children>
                    </Canvas.Children>
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="canvasScaleTransform"/>
                            <TranslateTransform x:Name="canvasTranslateTransform"/>
                        </TransformGroup>
                    </Canvas.RenderTransform>
                </Canvas>
                
            </Border>
            <Grid VerticalAlignment="Bottom">
                <Label   Name="MouseCoor" Foreground="Red" Content="X:Y" FontSize="20"></Label>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <DataGrid Name="mainDataGrid"  AutoGenerateColumns="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Station Name"/>
                    <DataGridTextColumn Header="Line Id"/>
                    <DataGridTextColumn Header="Pallets number"/>
                    <DataGridTextColumn Header="Material Code"/>
                    <DataGridTextColumn Header="Color"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <GridSplitter Background="DarkGray" Grid.Row="2"
                      Height="5" HorizontalAlignment="Stretch" 
                      VerticalAlignment="Bottom"/>

    </Grid>
</Window>
