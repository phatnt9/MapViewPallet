<Window
    x:Class="MapViewPallet.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="{DynamicResource MainWindow_Title}"
    Width="800"
    Height="450"
    MinWidth="600"
    MinHeight="400"
    Background="#f1f1f1"
    mc:Ignorable="d">
    <Window.Resources />
    <Grid x:Name="myManagementWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="170" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <StackPanel VerticalAlignment="Center">
                    <DockPanel>
                        <Menu DockPanel.Dock="Top">
                            <!--<MenuItem Header="_Bản đồ">
                                 <MenuItem Header="_Tải lại" Click="btn_LoadAll_Click" />
                                 </MenuItem>-->
                            <MenuItem Height="25" Header="_Management">
                                <MenuItem
                                    Height="25"
                                    Click="btn_PlanControl_Click"
                                    Header="Process">
                                    <MenuItem.Icon>
                                        <iconPacks:Material Kind="ClipboardOutline" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem
                                    Height="25"
                                    Click="btn_DevicesManagement_Click"
                                    Header="Device">
                                    <MenuItem.Icon>
                                        <iconPacks:Material Kind="TabletCellphone" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem
                                    Height="25"
                                    Click="btn_UsersManagement_Click"
                                    Header="Users">
                                    <MenuItem.Icon>
                                        <iconPacks:Material Kind="AccountMultiple" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Click="MenuItem_Click_1" Header="Buffer Properties">
                                    <MenuItem.Icon>
                                        <iconPacks:Material Kind="Settings" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem
                                    Height="25"
                                    Click="btn_AboutUs_Click"
                                    Header="About">
                                    <MenuItem.Icon>
                                        <iconPacks:Material Kind="Information" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                            <MenuItem Height="25" Header="Account">
                                <MenuItem Click="btn_ChangePassword_Click" Header="Change Password">
                                    <MenuItem.Icon>
                                        <iconPacks:Material Kind="LockReset" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator />
                                <MenuItem Click="Logout_Click" Header="Logout">
                                    <MenuItem.Icon>
                                        <iconPacks:Material Kind="Logout" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                            <MenuItem
                                Name="languageMenuItem"
                                Height="25"
                                Header="Language">
                                <MenuItem
                                    Click="MenuItem_Click"
                                    Header="English"
                                    IsCheckable="True"
                                    IsChecked="True"
                                    Tag="en-US" />
                                <MenuItem
                                    Click="MenuItem_Click"
                                    Header="Vietnamese"
                                    IsCheckable="True"
                                    Tag="vi-VN" />
                            </MenuItem>
                        </Menu>
                    </DockPanel>
                </StackPanel>
            </Grid>
            <Grid
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1">
                <Grid
                    Margin="0"
                    HorizontalAlignment="Right"
                    Background="#f1f1f1">
                    <Image Margin="0,0" Source="pack://siteoforigin:,,,/Resources/seldat_logo.png" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid Grid.Column="0" Margin="0,0,0,0">
                    <StackPanel VerticalAlignment="Center">
                        <ToolBarTray Background="#f1f1f1" ToolBarTray.IsLocked="True">
                            <ToolBar Background="#f1f1f1" ClipToBounds="False">

                                <Button
                                    Name="btn_MapOnOff"
                                    Margin="5,0"
                                    Click="Btn_MapOnOff_Click"
                                    ToolBar.OverflowMode="Never"
                                    ToolTip="Map On/Off">
                                    <iconPacks:PackIconMaterial Kind="Map" />
                                </Button>
                                <!--<Button ToolBar.OverflowMode="Never"
                                        Name="btn_MapReCenter"
                                        Margin="5 0"
                                        ToolTip="{DynamicResource MainWindow_Toolbar_MapReCenter}"
                                        Click="Btn_MapReCenter_Click">
                                    <iconPacks:PackIconMaterial
                                        Kind="SetCenter" />
                                </Button>-->
                                <Separator />
                                <Button
                                    Name="btn_PlanManagement"
                                    Margin="5,0"
                                    Click="Btn_PlanManagement_Click"
                                    ToolBar.OverflowMode="Never"
                                    ToolTip="PlanManagement">
                                    <iconPacks:PackIconMaterial Kind="CalendarEdit" />
                                </Button>
                                <Separator />
                                <Button
                                    Name="btn_OperationManagement"
                                    Margin="5,0"
                                    Click="Btn_OperationManagement_Click"
                                    ToolBar.OverflowMode="Never"
                                    ToolTip="OperationManagement">
                                    <iconPacks:PackIconMaterial Kind="ClipboardText" />
                                </Button>
                                <Separator />
                                <Button
                                    Name="btn_DeviceManagement"
                                    Margin="5,0"
                                    Click="Btn_DeviceManagement_Click"
                                    ToolBar.OverflowMode="Never"
                                    ToolTip="DeviceManagement">
                                    <iconPacks:PackIconMaterial Kind="TabletCellphone" />
                                </Button>
                                <Button
                                    Name="btn_ProductManagement"
                                    Margin="5,0"
                                    Click="Btn_ProductManagement_Click"
                                    ToolBar.OverflowMode="Never"
                                    ToolTip="DeviceManagement">
                                    <iconPacks:PackIconMaterial Kind="PackageVariantClosed" />
                                </Button>
                                <Button
                                    Name="btn_BufferManagement"
                                    Margin="5,0"
                                    Click="Btn_BufferManagement_Click"
                                    ToolBar.OverflowMode="Never"
                                    ToolTip="BufferManagement">
                                    <iconPacks:PackIconMaterial Kind="Buffer" />
                                </Button>
                                <!--<Button ToolTip="{DynamicResource MainWindow_Toolbar_UserManagement}"
                                        Name="btn_Statistics"
                                        ToolBar.OverflowMode="Never"
                                        Margin="5 0"
                                        Click="Btn_Statistics_Click">
                                    <iconPacks:PackIconMaterial
                                        Kind="ChartBar" />
                                </Button>-->
                                <Button
                                    Name="btn_UserManagement"
                                    Margin="5,0"
                                    Click="Btn_UserManagement_Click"
                                    ToolBar.OverflowMode="Never"
                                    ToolTip="UserManagement">
                                    <iconPacks:PackIconMaterial Kind="AccountMultiple" />
                                </Button>
                                <Button
                                    Name="Reloadallstation"
                                    Margin="5,0"
                                    Click="Reloadallstation_Click"
                                    ToolBar.OverflowMode="Never"
                                    ToolTip="Reloadallstation">
                                    <iconPacks:PackIconMaterial Kind="Autorenew" />
                                </Button>
                                <Button
                                    Name="MoveBuffer"
                                    Margin="5,0"
                                    Click="MoveBuffer_Click"
                                    ToolBar.OverflowMode="Never"
                                    ToolTip="MoveStaion">
                                    <iconPacks:PackIconMaterial Kind="MoveResize" />
                                </Button>
                                <!--<Button
                                    Name="PlayMusic"
                                    ToolBar.OverflowMode="Never"
                                    Margin="5 0"
                                    IsEnabled="False"
                                    Click="PlayMusic_Click">
                                    <iconPacks:PackIconMaterial
                                        Kind="Music" />
                                </Button>
                                <Button
                                    Name="StopMusic"
                                    ToolBar.OverflowMode="Never"
                                    Margin="5 0"
                                    Click="StopMusic_Click">
                                    <iconPacks:PackIconMaterial
                                        Kind="MusicOff" />
                                </Button>-->
                            </ToolBar>
                        </ToolBarTray>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.RowSpan="1"
            Background="#f1f1f1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="2"
                BorderBrush="#B9B9B9"
                BorderThickness="0,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="0" MinHeight="0" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="25" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0" />
                        <Border
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="1">
                            <Grid>
                                <Border
                                    Name="clipBorder"
                                    Background="#f1f1f1"
                                    BorderBrush="Black"
                                    BorderThickness="3"
                                    ClipToBounds="True"
                                    RenderTransformOrigin="0.5,0.5">
                                    <xctk:Zoombox MaxScale="100" MinScale="0.5">
                                        <!--<Grid Background="Transparent">-->
                                        <Canvas
                                            Name="map"
                                            Width="Auto"
                                            Height="Auto"
                                            RenderTransformOrigin="0.5,0.5">
                                            <Canvas.Children>
                                                <Rectangle
                                                    x:Name="rect"
                                                    Width="10"
                                                    Height="10"
                                                    Fill="Red" />
                                            </Canvas.Children>
                                            <Canvas.RenderTransform>
                                                <TransformGroup>
                                                    <MatrixTransform x:Name="canvasMatrixTransform" Matrix="1,0,0,1,0,0" />
                                                    <ScaleTransform x:Name="canvasScaleTransform" />
                                                    <TranslateTransform x:Name="canvasTranslateTransform" />
                                                </TransformGroup>
                                            </Canvas.RenderTransform>
                                        </Canvas>
                                        <!--</Grid>-->
                                    </xctk:Zoombox>
                                </Border>
                            </Grid>
                        </Border>
                        <Grid Grid.Row="0" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <StackPanel Orientation="Vertical">

                                    <!--<ToggleButton
                                         Margin="0 5 0 0"
                                         Width="20"
                                         Height="20"
                                         Style="{StaticResource MaterialDesignActionAccentToggleButton}"
                                         ToolTip="MaterialDesignActionLightToggleButton">
                                         <ToggleButton.Content>
                                         <iconPacks:Material Width="13" Height="13"
                                         Kind="MoveResizeVariant" />
                                         </ToggleButton.Content>
                                         <ToggleButtonAssist.OnContent>
                                         <iconPacks:Material
                                         Kind="EmoticonHappy" />
                                         </ToggleButtonAssist.OnContent>
                                         </ToggleButton>-->
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1">
                                <!--<Slider
                                     Margin="0 20 0 0"
                                     TickFrequency="1"
                                     TickPlacement="BottomRight"
                                     Orientation="Vertical"
                                     Minimum="1"
                                     Maximum="9"
                                     Height="Auto"
                                     Value="{Binding Path=zoomScale, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />-->
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">

                                    <Label
                                        Name="MouseCoor"
                                        Content="X:Y"
                                        FontSize="10" />
                                    <Label
                                        Name="MouseCoor2"
                                        Content="X:Y"
                                        FontSize="10" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="27" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                            <TabControl Margin="3,5,0,2">
                                <!--<TabItem Header="Khu Vực">
                                     <DataGrid Name="StationsDataGrid"
                                     ItemsSource="{Binding Stations_DGV}"
                                     AlternatingRowBackground="Gainsboro"
                                     AlternationCount="2" />
                                     </TabItem>-->
                                <!--<TabItem Header="Đơn Hàng">
                                     <DataGrid Name="OrdersDataGrid" />
                                     </TabItem>
                                     <TabItem Header="Tác Vụ">
                                     <DataGrid Name="TasksDataGrid" />
                                     </TabItem>-->
                                <TabItem Header="LogConsole">
                                    <RichTextBox Name="ConsoleDataGrid" />
                                </TabItem>
                            </TabControl>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <StackPanel
                                Margin="7,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <!--<Button Name="ClearButton" HorizontalAlignment="Left" Width="55" Height="18"
                                     Content="Xóa" FontSize="10" Background="OrangeRed"
                                     VerticalContentAlignment = "Top" Foreground="White"
                                     Margin="0,1,0,0" Click="clearLog_Clicked" />-->
                                <!--<CheckBox Name="CheckScroll" Margin="7,0,0,0" HorizontalAlignment="Left"
                                     VerticalAlignment="Center" Content="Cuộn"
                                     Checked="autoScrollLog_Checked" />-->
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <!--<GridSplitter Background="#B9B9B9" Grid.Row="0"
                         Height="3" HorizontalAlignment="Stretch"
                         VerticalAlignment="Bottom" />-->
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="2">
            <!--<StatusBar Background="#1987c2">
                 <StatusBarItem>
                 <TextBlock Name="lblCursorPosition" Text=""
                 Foreground="White" />
                 </StatusBarItem>
                 </StatusBar>-->
            <!--<Border BorderThickness="0,0,0,0" BorderBrush="#B9B9B9" Margin="0">
                 <StatusBar Name="sbar">
                 <StatusBarItem Background="#1987c2">
                 <TextBlock Name="ProgramStatus" Foreground="White" FontSize="10">Ready</TextBlock>
                 </StatusBarItem>
                 </StatusBar>
                 </Border>-->
        </Grid>
    </Grid>
</Window>