<Window x:Class="MapViewPallet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Background="#f5f5f5"
        Title="{DynamicResource MainWindow_Title}" Height="450" Width="800" MinWidth="600" MinHeight="400"
        >
    <Window.Resources>
        <ContextMenu x:Key="PATH-MENU" Name="pathMenu" >
            <MenuItem Header="Edit" Name="pathEdit"/>
            <MenuItem Header="Remove" Name="pathRemove"/>
        </ContextMenu>
        <Style x:Key="GridSplitterPreviewStyle" >
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Fill="#80000000"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="GridSplitterStyle1" TargetType="{x:Type GridSplitter}">
            <Setter Property="Background"
                    Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="PreviewStyle" Value="{StaticResource GridSplitterPreviewStyle}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridSplitter}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                >
                            <Canvas RenderOptions.EdgeMode="Aliased" UseLayoutRounding="True"
                                    Height="6" VerticalAlignment="Center"
                                    Width="50" HorizontalAlignment="Center">
                                <Line X1="23" X2="23" Y1="-25" Y2="20"
                                      Stroke="White" StrokeThickness="1"/>
                                <Line X1="24" X2="24" Y1="-25" Y2="20"
                                      Stroke="#A0A0A0" StrokeThickness="1"/>
                                <Line X1="27" X2="27" Y1="-25" Y2="20"
                                      Stroke="White" StrokeThickness="1"/>
                                <Line X1="28" X2="28" Y1="-25" Y2="20"
                                      Stroke="#A0A0A0" StrokeThickness="1"/>
                            </Canvas>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="myManagementWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="170"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0"  Grid.Column="0">
                <StackPanel VerticalAlignment="Center" >
                    <DockPanel>
                        <Menu DockPanel.Dock="Top">
                            <!--<MenuItem Header="_Bản đồ" >
                                 <MenuItem Header="_Tải lại" Click="btn_LoadAll_Click"/>
                                 </MenuItem>-->
                            <MenuItem Header="{DynamicResource MainWindow_Menu_Management}" Height="25">
                                <MenuItem Header="{DynamicResource MainWindow_Menu_Management_Process}" Click="btn_PlanControl_Click" Height="25">
                                    <MenuItem.Icon>
                                        <iconPacks:Material
                                            Kind="ClipboardOutline" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{DynamicResource MainWindow_Menu_Management_Device}" Click="btn_DevicesManagement_Click" Height="25">
                                    <MenuItem.Icon>
                                        <iconPacks:Material
                                            Kind="TabletCellphone" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{DynamicResource MainWindow_Menu_Management_Users}" Click="btn_UsersManagement_Click" Height="25">
                                    <MenuItem.Icon>
                                        <iconPacks:Material
                                            Kind="AccountMultiple" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="About us" Click="btn_AboutUs_Click" Height="25">
                                    <MenuItem.Icon>
                                        <iconPacks:Material
                                            Kind="Information" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                
                            </MenuItem>
                            <MenuItem Header="{DynamicResource MainWindow_Menu_Account}" Height="25">
                                <MenuItem Header="{DynamicResource MainWindow_Menu_Account_ChangePass}" Click="btn_ChangePassword_Click">
                                    <MenuItem.Icon>
                                        <iconPacks:Material
                                            Kind="LockReset" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator />
                                <MenuItem Header="{DynamicResource MainWindow_Menu_Account_Logout}" Click="Logout_Click">
                                    <MenuItem.Icon>
                                        <iconPacks:Material
                                            Kind="Logout" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                            <MenuItem Header="{DynamicResource Language}" Name="languageMenuItem" Height="25">
                                <MenuItem Header="{DynamicResource English}" Tag="en-US" Click="MenuItem_Click" IsCheckable="True" IsChecked="True"/>
                                <MenuItem Header="{DynamicResource Vietnamese}" Tag="vi-VN" Click="MenuItem_Click" IsCheckable="True"/>
                            </MenuItem>
                            
                        </Menu>
                    </DockPanel>
                </StackPanel>

            </Grid>
