<Window x:Class="MapViewPallet.MiniForm.DevicesManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapViewPallet.MiniForm"
        mc:Ignorable="d"
        Title="Quản Lý" Height="450" Width="800" MinHeight="300" MinWidth="500">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="CharacterCasing" Value="Upper"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid Margin="0,5,0,5">
                <Image Source="pack://siteoforigin:,,,/Resources/seldat_logo.png"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <TabControl Name="DeviceManagementTabControl">
                <TabItem Header="Quy trình">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <GroupBox >
                                    <GroupBox.Header>
                                        <StackPanel>
                                            <TextBlock FontSize="20" 
                                       FontWeight="Bold"
                                       Text="Thiết bị">
                                            </TextBlock>
                                        </StackPanel>
                                    </GroupBox.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Center">


                                                <Button Name="btn_Refresh_Device" 
                                                        Margin="5,0,0,5" 
                                                        Width="Auto" 
                                                        FontSize="14" 
                                                        Click="Btn_Refresh_Device_Click">
                                                    <StackPanel>
                                                        <Image Width="20" 
                                                               Height="20" 
                                                               Source="pack://siteoforigin:,,,/Resources/icon_refresh.png"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid Name="DevicesListDg" 
                                      ItemsSource="{Binding GroupedDevices}"
                                      CanUserReorderColumns="False" 
                                      CanUserAddRows="False"
                                      CanUserResizeColumns="True" 
                                      CanUserResizeRows="False"
                                      CanUserDeleteRows="False" 
                                      CanUserSortColumns="True"
                                      AutoGenerateColumns="False">
                                                <DataGrid.ColumnHeaderStyle>
                                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                                        <Setter Property="HorizontalContentAlignment" 
                                                Value="Center" />
                                                    </Style>
                                                </DataGrid.ColumnHeaderStyle>
                                                <DataGrid.RowStyle>
                                                    <Style TargetType="DataGridRow">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" 
                                                     Value="True">
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGrid.RowStyle>
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn Width="Auto" 
                                                            Header="Id">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=deviceId}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn Width="*" 
                                                            Header="Tên thiết bị">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=deviceName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <!--<DataGridTextColumn Header="Tên thiết bị" 
                                                        Width="*" 
                                                        IsReadOnly="True"
                                                        Binding="{Binding Path=deviceName}">
                                                    </DataGridTextColumn>-->
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="1">
                                <GroupBox >
                                    <GroupBox.Header>
                                        <StackPanel>
                                            <TextBlock FontSize="20" FontWeight="Bold">Sản phẩm</TextBlock>
                                        </StackPanel>
                                    </GroupBox.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Center">



                                                <Button Name="btn_Refresh_DeviceProduct"
                                        Margin="5,0,0,5" 
                                        Width="Auto" 
                                        FontSize="14" 
                                        Click="Btn_Refresh_DeviceProduct_Click">
                                                    <StackPanel>
                                                        <Image Width="20" 
                                               Height="20" 
                                               Source="pack://siteoforigin:,,,/Resources/icon_refresh.png"/>
                                                    </StackPanel>
                                                </Button>


                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid Name="DeviceProductsListDg" 
                                      ItemsSource="{Binding GroupedDeviceProducts}"
                                      CanUserReorderColumns="False" 
                                      CanUserAddRows="False"
                                      CanUserResizeColumns="True" 
                                      CanUserResizeRows="False"
                                      CanUserDeleteRows="False" 
                                      CanUserSortColumns="True"
                                      AutoGenerateColumns="False">
                                                <DataGrid.ColumnHeaderStyle>
                                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                                        <Setter Property="HorizontalContentAlignment" 
                                                Value="Center" />
                                                    </Style>
                                                </DataGrid.ColumnHeaderStyle>
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn>
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox Name="DeviceProductCbRow" 
                                                          HorizontalAlignment="Center"
                                                          IsChecked="{Binding Path=checkStatus, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                          Click="DeviceProductCbRow_Click"
                                                          />
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn Width="Auto" 
                                                            Header="Id">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=productId}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn Width="*" 
                                                            Header="Tên sản phẩm">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=productName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="2">
                                <GroupBox >
                                    <GroupBox.Header>
                                        <StackPanel>
                                            <TextBlock FontSize="20" 
                                       FontWeight="Bold">Vùng Buffer</TextBlock>
                                        </StackPanel>
                                    </GroupBox.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Center">

                                                <Button Name="btn_Refresh_DeviceBuffer" 
                                        Margin="5,0,0,5" 
                                        Width="Auto" 
                                        FontSize="14" 
                                        Click="Btn_Refresh_DeviceBuffer_Click">
                                                    <StackPanel>
                                                        <Image Width="20" 
                                               Height="20" 
                                               Source="pack://siteoforigin:,,,/Resources/icon_refresh.png"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid Name="DeviceBuffersListDg" 
                                      ItemsSource="{Binding GroupedDeviceBuffers}"
                                      CanUserReorderColumns="False" 
                                      CanUserAddRows="False"
                                      CanUserResizeColumns="True" 
                                      CanUserResizeRows="False"
                                      CanUserDeleteRows="False" 
                                      CanUserSortColumns="True"
                                      AutoGenerateColumns="False">
                                                <DataGrid.ColumnHeaderStyle>
                                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                                        <Setter Property="HorizontalContentAlignment" 
                                                Value="Center" />
                                                    </Style>
                                                </DataGrid.ColumnHeaderStyle>
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn>
                                                        <!--<DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <CheckBox Name="BufferCbCol" 
                                                          HorizontalAlignment="Center"></CheckBox>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>-->
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox Name="DeviceBufferCbRow" 
                                                          HorizontalAlignment="Center"
                                                          IsChecked="{Binding Path=checkStatus, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                          Click="DeviceBufferCbRow_Click"/>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn Width="Auto" 
                                                            Header="Id">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=bufferId}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTemplateColumn Width="*" 
                                                            Header="Tên Buffer">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                                               Text="{Binding Path=bufferName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    <DataGridTextColumn Header="Sort" 
                                                        Width="Auto" 
                                                        IsReadOnly="False"
                                                        Binding="{Binding Path=bufferSort, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                        >
                                                    </DataGridTextColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                                <Button Name="Btn_Exit_tab1" 
                        Width="70" 
                        Content="Thoát" 
                        Margin="30,5" 
                        Click="Btn_Exit_Device_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Thiết bị">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <GroupBox >
                                    <GroupBox.Header>
                                        <StackPanel>
                                            <TextBlock FontSize="20" FontWeight="Bold">Thiết bị</TextBlock>
                                        </StackPanel>
                                    </GroupBox.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Center">
                                                <Button Name="btn_Add_Device" 
                                                        Margin="5,0,0,5" 
                                                        Width="Auto" 
                                                        FontSize="14"
                                                        Click="Btn_Add_Device_Click">
                                                    <StackPanel>
                                                        <Image Width="20" 
                                               Height="20"
                                               Source="pack://siteoforigin:,,,/Resources/icon_add.png"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Name="btn_Delete_Device" 
                                        Margin="5,0,0,5" 
                                        Width="Auto" 
                                        FontSize="14"
                                                        Click="Btn_Delete_Device_Click">
                                                    <StackPanel>
                                                        <Image Width="20" 
                                               Height="20" 
                                               Source="pack://siteoforigin:,,,/Resources/icon_clear.png"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button Name="btn_Refresh_Device2"
                                        Margin="5,0,0,5" 
                                        Width="Auto" 
                                        FontSize="14"
                                                        Click="Btn_Refresh_Device_Click">
                                                    <StackPanel>
                                                        <Image Width="20" 
                                               Height="20" 
                                               Source="pack://siteoforigin:,,,/Resources/icon_refresh.png"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid Name="DevicesListDg2" 
                                      ItemsSource="{Binding GroupedDevices}"
                                      CanUserReorderColumns="False" 
                                      CanUserAddRows="False"
                                      CanUserResizeColumns="True" 
                                      CanUserResizeRows="False"
                                      CanUserDeleteRows="False" 
                                      CanUserSortColumns="True"
                                      AutoGenerateColumns="False">
                                                <DataGrid.ColumnHeaderStyle>
                                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                                        <Setter Property="HorizontalContentAlignment" 
                                                Value="Center" />
                                                    </Style>
                                                </DataGrid.ColumnHeaderStyle>
                                                <DataGrid.RowStyle>
                                                    <Style TargetType="DataGridRow">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" 
                                                     Value="True">
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGrid.RowStyle>
                                                <DataGrid.Columns>

                                                    <DataGridTemplateColumn Width="Auto" 
                                                            Header="Id">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=deviceId}">

                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTextColumn Header="Tên thiết bị" 
                                                        Width="Auto"
                                                        IsReadOnly="False"
                                                        Binding="{Binding Path=deviceName}">
                                                    </DataGridTextColumn>

                                                    <DataGridTemplateColumn Width="*" 
                                                            Header="ImageURL">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=imageDeviceUrl}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Width="*" 
                                                            Header="ImageUrlOld"
                                                                            Visibility="Hidden">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center"
                                                                               Text="{Binding Path=imageDeviceUrlOld}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Width="*" 
                                                            Header="pathFile"
                                                                            Visibility="Hidden">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=pathFile, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="80"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <GroupBox>
                                        <GroupBox.Header>
                                            <StackPanel>
                                                <TextBlock FontSize="20" FontWeight="Bold">Dữ liệu Pallet Cấp</TextBlock>
                                            </StackPanel>
                                        </GroupBox.Header>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"></RowDefinition>
                                                <RowDefinition ></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                                        Margin="0,0,0,5">
                                                    <StackPanel Orientation="Horizontal" 
                                                                HorizontalAlignment="Right">
                                                        <Label VerticalAlignment="Center" 
                                                               Content="Cột"
                                                               FontSize="12"></Label>
                                                        <TextBox Name="MaxBaytb" 
                                                                 Width="40" 
                                                                 Height="20"
                                                                 PreviewTextInput="MaxBaytb_PreviewTextInput"></TextBox>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" 
                                                                HorizontalAlignment="Right">
                                                        <Label VerticalAlignment="Center" 
                                                               Content="Hàng"
                                                               FontSize="12"></Label>
                                                        <TextBox Name="MaxRowtb" 
                                                                 Width="40" 
                                                                 Height="20" 
                                                                 PreviewTextInput ="MaxRowtb_PreviewTextInput"></TextBox>
                                                    </StackPanel>
                                                    <Button Name="btn_Apply" 
                                        Margin="20,0,0,0"
                                        Width="Auto" 
                                        FontSize="13"
                                                        Content="Xác nhận"
                                                        Click="Btn_Apply_DeviceBufferData_Click"/>
                                                    <Button Name="btn_Save_DevicePallet" 
                                        Margin="20,0,0,0"
                                        Width="40" 
                                        FontSize="13"
                                                        Content="Lưu"
                                                        Click="Btn_Save_DevicePallet_Click"/>
                                                </StackPanel>
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <DataGrid Name="DevicePalletsListDg" 
                                      ItemsSource="{Binding GroupedDevicePallets}"
                                      CanUserReorderColumns="False" 
                                      CanUserAddRows="False"
                                      CanUserResizeColumns="True" 
                                      CanUserResizeRows="False"
                                      CanUserDeleteRows="False" 
                                      CanUserSortColumns="True"
                                      AutoGenerateColumns="False"
                                                      >
                                                    <DataGrid.ColumnHeaderStyle>
                                                        <Style TargetType="{x:Type DataGridColumnHeader}">
                                                            <Setter Property="HorizontalContentAlignment" 
                                                Value="Center" />
                                                        </Style>
                                                    </DataGrid.ColumnHeaderStyle>
                                                    <DataGrid.RowStyle>
                                                        <Style TargetType="DataGridRow">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsSelected" 
                                                     Value="True">
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </DataGrid.RowStyle>
                                                    <DataGrid.Columns>
                                                        <DataGridTemplateColumn Width="Auto" 
                                                            Header="DeviceId">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=deviceId}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn Width="Auto" 
                                                            Header="Id">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=devicePalletId}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn Width="Auto" 
                                                            Header="Pallet">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock HorizontalAlignment="Center" 
                                                               Text="{Binding Path=devicePalletName}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTextColumn Header="Hàng" 
                                                        Width="Auto" 
                                                        IsReadOnly="True"
                                                        Binding="{Binding Path=row}">
                                                        </DataGridTextColumn>
                                                        <DataGridTextColumn Header="Cột" 
                                                        Width="Auto" 
                                                        IsReadOnly="True"
                                                        Binding="{Binding Path=bay}">
                                                        </DataGridTextColumn>
                                                        <DataGridTextColumn Header="Dữ liệu" 
                                                        Width="Auto" 
                                                        IsReadOnly="True"
                                                        Binding="{Binding Path=dataPallet}">
                                                            <DataGridTextColumn.ElementStyle>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                                </Style>
                                                            </DataGridTextColumn.ElementStyle>
                                                            <DataGridTextColumn.EditingElementStyle>
                                                                <Style TargetType="TextBox">
                                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                                    <Setter Property="AcceptsReturn" Value="true" />
                                                                </Style>
                                                            </DataGridTextColumn.EditingElementStyle>
                                                        </DataGridTextColumn>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </Grid>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <GroupBox>
                                            <GroupBox.Header>
                                                <StackPanel>
                                                    <TextBlock FontSize="14" FontWeight="Bold" Text="Tọa độ:"></TextBlock>
                                                </StackPanel>
                                            </GroupBox.Header>
                                            <Grid>
                                                <StackPanel Orientation="Vertical">
                                                    <Grid>
                                                        <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center">
                                                            <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Left">
                                                                <Label VerticalAlignment="Center"
                                           Content="Line: "
                                               Width="40"
                                                                       FontWeight="DemiBold"
                                           FontSize="12"></Label>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                                                <Label VerticalAlignment="Center" 
                                           Content="X"
                                           FontSize="12"></Label>
                                                                <TextBox Name="palletLineX" 
                                             Width="35" 
                                             Height="20" 
                                                                     PreviewTextInput="PalletLine_PreviewTextInput"></TextBox>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                                                <Label VerticalAlignment="Center" 
                                           Content="Y"
                                           FontSize="12"></Label>
                                                                <TextBox Name="palletLineY" 
                                             Width="35" 
                                             Height="20" 
                                                                     PreviewTextInput="PalletLine_PreviewTextInput"></TextBox>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                                                <Label VerticalAlignment="Center" 
                                           Content="A"
                                           FontSize="12"></Label>
                                                                <TextBox Name="palletLineA" 
                                             Width="35" 
                                             Height="20"
                                                                 PreviewTextInput="PalletLine_PreviewTextInput"></TextBox>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                    <Grid>
                                                        <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center">
                                                            <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Left">
                                                                <Label VerticalAlignment="Center" 
                                           Content="Pallet:"
                                               Width="42"
                                                                       FontWeight="DemiBold"
                                           FontSize="12"></Label>
                                                            </StackPanel>
                                                            <!--<StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right">
                                                    <Label VerticalAlignment="Center" 
                                           Content="Hàng"
                                           FontSize="12"></Label>
                                                    <TextBox Name="palletR" 
                                             Width="35" 
                                             Height="20" 
                                             CharacterCasing="Upper"></TextBox>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right">
                                                    <Label VerticalAlignment="Center" 
                                           Content="Cột"
                                           FontSize="12"></Label>
                                                    <TextBox Name="palletB" 
                                             Width="35" 
                                             Height="20" 
                                             CharacterCasing="Upper"></TextBox>
                                                </StackPanel>-->
                                                            <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                                                <Label VerticalAlignment="Center" 
                                           Content="Hướng"
                                           FontSize="12"></Label>
                                                                <TextBox Name="palletPalletD" 
                                             Width="35" 
                                             Height="20"
                                                                 PreviewTextInput="PalletLine_PreviewTextInput"></TextBox>
                                                            </StackPanel>
