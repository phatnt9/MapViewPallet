<Window
    x:Class="MapViewPallet.MiniForm.DevicesManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:MapViewPallet.MiniForm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{DynamicResource DevicesManagement_Title}"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources />
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid Margin="0,5,0,5">
                <Image Source="pack://siteoforigin:,,,/Resources/seldat_logo.png" />
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <TabControl Name="DeviceManagementTabControl">
                <TabItem Header="{DynamicResource DevicesManagement_TabItem_Operation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_Device}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <Button
                                                    Name="btn_Refresh_Device"
                                                    Width="20"
                                                    Height="20"
                                                    Click="Btn_Refresh_Device_Click">
                                                    <iconPacks:PackIconMaterial Kind="Refresh" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid
                                                Name="DevicesListDg"
                                                AutoGenerateColumns="False"
                                                CanUserAddRows="False"
                                                CanUserDeleteRows="False"
                                                CanUserReorderColumns="False"
                                                CanUserResizeRows="False"
                                                ItemsSource="{Binding GroupedDevices}"
                                                SelectionMode="Single"
                                                SelectionUnit="FullRow">
                                                <DataGrid.Columns>

                                                    <DataGridTextColumn
                                                        Width="Auto"
                                                        Binding="{Binding Path=deviceId}"
                                                        Header="Id"
                                                        IsReadOnly="True"
                                                        Visibility="Visible" />

                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Path=deviceName}"
                                                        IsReadOnly="True">
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_Device_Column_DeviceName}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>

                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="1">
                                <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_Product}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <Button
                                                    Name="btn_Refresh_DeviceProduct"
                                                    Width="20"
                                                    Height="20"
                                                    Click="Btn_Refresh_DeviceProduct_Click">
                                                    <iconPacks:PackIconMaterial Kind="Refresh" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid
                                                Name="DeviceProductsListDg"
                                                AutoGenerateColumns="False"
                                                CanUserAddRows="False"
                                                CanUserDeleteRows="False"
                                                CanUserReorderColumns="False"
                                                CanUserResizeRows="False"
                                                ItemsSource="{Binding GroupedDeviceProducts}"
                                                SelectionMode="Single"
                                                SelectionUnit="FullRow">
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn Width="Auto">
                                                        <!--<DataGridTemplateColumn.Header>
                                                            <CheckBox Name="chkSelectAll" Unchecked="chkSelectAll_Unchecked"></CheckBox>
                                                        </DataGridTemplateColumn.Header>-->
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox
                                                                    Name="DeviceProductCbRow"
                                                                    HorizontalAlignment="Center"
                                                                    Click="DeviceProductCbRow_Click"
                                                                    IsChecked="{Binding Path=checkStatus, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTextColumn
                                                        Width="Auto"
                                                        Binding="{Binding Path=productId}"
                                                        Header="Id"
                                                        IsReadOnly="True"
                                                        Visibility="Visible" />

                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Path=productName}"
                                                        IsReadOnly="True">
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_Product_Column_ProductName}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>

                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="2">
                                <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_Buffer}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">

                                                <Button
                                                    Name="btn_Refresh_DeviceBuffer"
                                                    Width="20"
                                                    Height="20"
                                                    Click="Btn_Refresh_DeviceBuffer_Click">
                                                    <iconPacks:PackIconMaterial Kind="Refresh" />
                                                </Button>

                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid
                                                Name="DeviceBuffersListDg"
                                                AutoGenerateColumns="False"
                                                CanUserAddRows="False"
                                                CanUserDeleteRows="False"
                                                CanUserReorderColumns="False"
                                                CanUserResizeRows="False"
                                                ItemsSource="{Binding GroupedDeviceBuffers}"
                                                SelectionMode="Single"
                                                SelectionUnit="FullRow">
                                                <DataGrid.Columns>

                                                    <DataGridTemplateColumn Width="Auto">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox
                                                                    Name="DeviceBufferCbRow"
                                                                    HorizontalAlignment="Center"
                                                                    Click="DeviceBufferCbRow_Click"
                                                                    IsChecked="{Binding Path=checkStatus, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTextColumn
                                                        Width="Auto"
                                                        Binding="{Binding Path=bufferId}"
                                                        Header="Id"
                                                        IsReadOnly="True"
                                                        Visibility="Visible" />

                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Path=bufferName}"
                                                        IsReadOnly="True">
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_Buffer_Column_BufferName}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>

                                                    <DataGridTextColumn
                                                        Width="Auto"
                                                        Binding="{Binding Path=bufferSort, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                        IsReadOnly="False">
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_Buffer_Column_BufferSort}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>

                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button
                                    Name="Btn_Exit_tab1"
                                    Width="Auto"
                                    Height="25"
                                    Margin="10,0"
                                    Padding="5,0"
                                    Click="Btn_Exit_Device_Click"
                                    Content="{DynamicResource DevicesManagement_Button_Exit}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="{DynamicResource DevicesManagement_TabItem_Device}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_Device}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <Button
                                                    Name="btn_Add_Device"
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5,0,0,0"
                                                    Click="Btn_Add_Device_Click">
                                                    <iconPacks:PackIconMaterial Kind="Plus" />
                                                </Button>
                                                <Button
                                                    Name="btn_Delete_Device"
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5,0,0,0"
                                                    Click="Btn_Delete_Device_Click">
                                                    <iconPacks:PackIconMaterial Kind="Delete" />
                                                </Button>
                                                <Button
                                                    Name="btn_Refresh_Device2"
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5,0,0,0"
                                                    Click="Btn_Refresh_Device_Click">
                                                    <iconPacks:PackIconMaterial Kind="Refresh" />
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid
                                                Name="DevicesListDg2"
                                                AutoGenerateColumns="False"
                                                CanUserAddRows="False"
                                                CanUserDeleteRows="False"
                                                CanUserReorderColumns="False"
                                                CanUserResizeRows="False"
                                                ItemsSource="{Binding GroupedDevices}"
                                                SelectionMode="Single"
                                                SelectionUnit="FullRow">
                                                <DataGrid.Columns>

                                                    <DataGridTextColumn
                                                        Width="Auto"
                                                        Binding="{Binding Path=deviceId}"
                                                        Header="Id"
                                                        IsReadOnly="True"
                                                        Visibility="Visible" />

                                                    <DataGridTextColumn
                                                        Width="*"
                                                        Binding="{Binding Path=deviceName}"
                                                        IsReadOnly="False">
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_Device_Column_DeviceName}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>

                                                    <DataGridTextColumn
                                                        Width="Auto"
                                                        Binding="{Binding Path=imageDeviceUrl}"
                                                        IsReadOnly="True">
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_Device_Column_ImageDeviceUrl}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>

                                                    <DataGridTextColumn
                                                        Width="Auto"
                                                        Binding="{Binding Path=imageDeviceUrlOld}"
                                                        Header="ImageUrlOld"
                                                        Visibility="Hidden" />

                                                    <DataGridTextColumn
                                                        Width="Auto"
                                                        Binding="{Binding Path=pathFile, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                        Header="pathFile"
                                                        Visibility="Hidden" />

                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <GridSplitter
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Background="Ivory" />
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="100" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_DevicePalletData}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <StackPanel
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                        <Label VerticalAlignment="Center" Content="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Bay}" />
                                                        <TextBox
                                                            Name="MaxBaytb"
                                                            Width="Auto"
                                                            Height="17"
                                                            PreviewTextInput="MaxBaytb_PreviewTextInput" />
                                                    </StackPanel>
                                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                        <Label VerticalAlignment="Center" Content="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Row}" />
                                                        <TextBox
                                                            Name="MaxRowtb"
                                                            Width="Auto"
                                                            Height="17"
                                                            PreviewTextInput="MaxRowtb_PreviewTextInput" />
                                                    </StackPanel>
                                                    <Button
                                                        Name="btn_Apply"
                                                        Width="25"
                                                        Height="20"
                                                        Margin="20,0,0,0"
                                                        Click="Btn_Apply_DeviceBufferData_Click">
                                                        <iconPacks:PackIconMaterial Kind="Check" />
                                                    </Button>
                                                    <Button
                                                        Name="btn_Save_DevicePallet"
                                                        Width="25"
                                                        Height="20"
                                                        Margin="20,0,0,0"
                                                        Click="Btn_Save_DevicePallet_Click">
                                                        <iconPacks:PackIconMaterial Kind="ContentSave" />
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <DataGrid
                                                    Name="DevicePalletsListDg"
                                                    AutoGenerateColumns="False"
                                                    CanUserAddRows="False"
                                                    CanUserDeleteRows="False"
                                                    CanUserReorderColumns="False"
                                                    CanUserResizeRows="False"
                                                    ItemsSource="{Binding GroupedDevicePallets}"
                                                    SelectionMode="Single"
                                                    SelectionUnit="FullRow">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn
                                                            Width="Auto"
                                                            Binding="{Binding Path=deviceId}"
                                                            Header="DeviceId"
                                                            IsReadOnly="True"
                                                            Visibility="Hidden" />
                                                        <DataGridTextColumn
                                                            Width="Auto"
                                                            Binding="{Binding Path=devicePalletId}"
                                                            Header="devicePalletId"
                                                            IsReadOnly="True"
                                                            Visibility="Visible" />

                                                        <DataGridTextColumn
                                                            Width="Auto"
                                                            Binding="{Binding Path=row}"
                                                            IsReadOnly="True">
                                                            <DataGridTextColumn.HeaderTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Column_Row}" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTextColumn.HeaderTemplate>
                                                        </DataGridTextColumn>

                                                        <DataGridTextColumn
                                                            Width="Auto"
                                                            Binding="{Binding Path=bay}"
                                                            IsReadOnly="True">
                                                            <DataGridTextColumn.HeaderTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Column_Bay}" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTextColumn.HeaderTemplate>
                                                        </DataGridTextColumn>

                                                        <DataGridTextColumn
                                                            Width="*"
                                                            Binding="{Binding Path=devicePalletName}"
                                                            IsReadOnly="True">
                                                            <DataGridTextColumn.HeaderTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Column_DevicePalletName}" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTextColumn.HeaderTemplate>
                                                        </DataGridTextColumn>

                                                        <DataGridTextColumn
                                                            Width="*"
                                                            Binding="{Binding Path=dataPallet}"
                                                            IsReadOnly="True"
                                                            Visibility="Visible">
                                                            <DataGridTextColumn.HeaderTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock Text="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Column_DataPallet}" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTextColumn.HeaderTemplate>
                                                            <DataGridTextColumn.ElementStyle>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                                </Style>
                                                            </DataGridTextColumn.ElementStyle>
                                                            <DataGridTextColumn.EditingElementStyle>
                                                                <Style TargetType="TextBox">
                                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                                    <Setter Property="AcceptsReturn" Value="true" />
                                                                </Style>
                                                            </DataGridTextColumn.EditingElementStyle>
                                                        </DataGridTextColumn>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </Grid>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <Grid>
                                            <StackPanel Orientation="Vertical">
                                                <Grid Margin="0,4,0,0">
                                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                            <Label
                                                                VerticalAlignment="Center"
                                                                Content="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Position}"
                                                                FontSize="16" />
                                                        </StackPanel>
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                            <Label
                                                                VerticalAlignment="Center"
                                                                Content="X"
                                                                FontSize="12" />
                                                            <TextBox
                                                                Name="palletLineX"
                                                                Width="Auto"
                                                                Height="17"
                                                                PreviewTextInput="PalletLine_PreviewTextInput" />
                                                        </StackPanel>
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                            <Label
                                                                VerticalAlignment="Center"
                                                                Content="Y"
                                                                FontSize="12" />
                                                            <TextBox
                                                                Name="palletLineY"
                                                                Width="Auto"
                                                                Height="17"
                                                                PreviewTextInput="PalletLine_PreviewTextInput" />
                                                        </StackPanel>
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                            <Label
                                                                VerticalAlignment="Center"
                                                                Content="A"
                                                                FontSize="12" />
                                                            <TextBox
                                                                Name="palletLineA"
                                                                Width="Auto"
                                                                Height="17"
                                                                PreviewTextInput="PalletLine_PreviewTextInput" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid Margin="0,4,0,0">
                                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                            <Label
                                                                VerticalAlignment="Center"
                                                                Content="Pallet:"
                                                                FontSize="12" />
                                                        </StackPanel>
                                                        <!--<StackPanel Orientation="Horizontal"
                                                             HorizontalAlignment="Center">
                                                             <Label VerticalAlignment="Center"
                                                             Content="D" FontSize="12"/>
                                                             <TextBox Name="palletPalletD"
                                                             Width="35"
                                                             Height="17"
                                                             PreviewTextInput="PalletLine_PreviewTextInput"></TextBox>
                                                             </StackPanel>-->
                                                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                            <Label
                                                                Width="Auto"
                                                                VerticalAlignment="Center"
                                                                Content="{DynamicResource StationEditor_Groupbox_PalletInfo_PalletDirection_main}"
                                                                FontSize="12" />
                                                            <ComboBox
                                                                Name="palletD_Main"
                                                                Width="Auto"
                                                                Height="20"
                                                                FontSize="12">
                                                                <ComboBoxItem>0</ComboBoxItem>
                                                                <ComboBoxItem>1</ComboBoxItem>
                                                                <ComboBoxItem>2</ComboBoxItem>
                                                            </ComboBox>
                                                        </StackPanel>
                                                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                            <Label
                                                                Width="Auto"
                                                                VerticalAlignment="Center"
                                                                Content="{DynamicResource StationEditor_Groupbox_PalletInfo_PalletDirection_sub}"
                                                                FontSize="12" />
                                                            <ComboBox
                                                                Name="palletD_Sub"
                                                                Width="Auto"
                                                                Height="20"
                                                                FontSize="12">
                                                                <ComboBoxItem>0</ComboBoxItem>
                                                                <ComboBoxItem>1</ComboBoxItem>
                                                                <ComboBoxItem>2</ComboBoxItem>
                                                            </ComboBox>
                                                        </StackPanel>
                                                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                            <Label
                                                                Width="Auto"
                                                                VerticalAlignment="Center"
                                                                Content="{DynamicResource StationEditor_Groupbox_PalletInfo_PalletDirection_out}"
                                                                FontSize="12" />
                                                            <ComboBox
                                                                Name="palletD_Out"
                                                                Width="Auto"
                                                                Height="20"
                                                                FontSize="12">
                                                                <ComboBoxItem>0</ComboBoxItem>
                                                                <ComboBoxItem>1</ComboBoxItem>
                                                                <ComboBoxItem>2</ComboBoxItem>
                                                            </ComboBox>
                                                        </StackPanel>
                                                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                            <Label
                                                                Width="Auto"
                                                                VerticalAlignment="Center"
                                                                Content="{DynamicResource StationEditor_Groupbox_PalletInfo_PalletLine_ord}"
                                                                FontSize="12" />
                                                            <ComboBox
                                                                Name="palletL_Ord"
                                                                Width="Auto"
                                                                Height="20"
                                                                FontSize="12">
                                                                <ComboBoxItem>0</ComboBoxItem>
                                                                <ComboBoxItem>1</ComboBoxItem>
                                                                <ComboBoxItem>2</ComboBoxItem>
                                                                <ComboBoxItem>3</ComboBoxItem>
                                                                <ComboBoxItem>4</ComboBoxItem>
                                                            </ComboBox>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid Margin="0,4,0,0">
                                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                            <Label
                                                                VerticalAlignment="Center"
                                                                Content="Subline"
                                                                FontSize="12" />
                                                            <ComboBox
                                                                Name="palletHasSubLine"
                                                                Width="Auto"
                                                                Height="20"
                                                                FontSize="12">
                                                                <ComboBoxItem>yes</ComboBoxItem>
                                                                <ComboBoxItem>no</ComboBoxItem>
                                                            </ComboBox>
                                                            <!--<TextBox Name="bufferHeadPointHasSubLine"
                                                                 Width="35"
                                                                 Height="17"
                                                                 FontSize="12"
                                                                 CharacterCasing="Upper"
                                                                 PreviewTextInput="myPreviewTextInput"></TextBox>-->
                                                        </StackPanel>
                                                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                            <Label
                                                                VerticalAlignment="Center"
                                                                Content="Type"
                                                                FontSize="12" />
                                                            <ComboBox
                                                                Name="palletType"
                                                                Width="Auto"
                                                                Height="20"
                                                                FontSize="12">
                                                                <ComboBoxItem>Working</ComboBoxItem>
                                                                <ComboBoxItem>Empty</ComboBoxItem>
                                                            </ComboBox>
                                                            <!--<TextBox Name="bufferHeadPointHasSubLine"
                                                                 Width="35"
                                                                 Height="17"
                                                                 FontSize="12"
                                                                 CharacterCasing="Upper"
                                                                 PreviewTextInput="myPreviewTextInput"></TextBox>-->
                                                        </StackPanel>
                                                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                            <Label
                                                                VerticalAlignment="Center"
                                                                Content="Phase"
                                                                FontSize="12" />
                                                            <ComboBox
                                                                Name="palletPhase"
                                                                Width="Auto"
                                                                Height="20"
                                                                FontSize="12">
                                                                <ComboBoxItem>0</ComboBoxItem>
                                                                <ComboBoxItem>1</ComboBoxItem>
                                                                <ComboBoxItem>2</ComboBoxItem>
                                                                <ComboBoxItem>3</ComboBoxItem>
                                                                <ComboBoxItem>4</ComboBoxItem>
                                                                <ComboBoxItem>5</ComboBoxItem>
                                                                <ComboBoxItem>6</ComboBoxItem>
                                                                <ComboBoxItem>7</ComboBoxItem>
