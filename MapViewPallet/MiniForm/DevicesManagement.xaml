<Window x:Class="MapViewPallet.MiniForm.DevicesManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapViewPallet.MiniForm"
        mc:Ignorable="d"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="{DynamicResource DevicesManagement_Title}" 
        WindowStartupLocation="CenterOwner" 
        Height="600" Width="800">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid Margin="0,5,0,5">
                <Image Source="pack://siteoforigin:,,,/Resources/seldat_logo.png"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <TabControl Name="DeviceManagementTabControl">
                <TabItem Header="{DynamicResource DevicesManagement_TabItem_Operation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_Device}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Center">
                                                <Button Name="btn_Refresh_Device"
                                                        Click="Btn_Refresh_Device_Click"
                                                        Width="20" 
                                                        Height="20">
                                                    <iconPacks:PackIconMaterial Kind="Refresh"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid Name="DevicesListDg"
                                                      ItemsSource="{Binding GroupedDevices}"
                                                      CanUserReorderColumns="False" 
                                                      CanUserAddRows="False"
                                                      CanUserResizeRows="False"
                                                      CanUserDeleteRows="False"
                                                      AutoGenerateColumns="False"
                                                      SelectionMode="Single"
                                                      SelectionUnit="FullRow">
                                                <DataGrid.Columns>
                                                    
                                                    <DataGridTemplateColumn Width="Auto" 
                                                                            Header="Id"
                                                                            Visibility="Visible">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center"
                                                                               Text="{Binding Path=deviceId}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Width="*">
                                                        <DataGridTemplateColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{DynamicResource DevicesManagement_Groupbox_Device_Column_DeviceName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.HeaderTemplate>
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{Binding Path=deviceName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="1">
                                <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_Product}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Center">
                                                <Button Name="btn_Refresh_DeviceProduct"
                                                        Click="Btn_Refresh_DeviceProduct_Click"
                                                        Width="20" 
                                                        Height="20">
                                                    <iconPacks:PackIconMaterial Kind="Refresh"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid Name="DeviceProductsListDg" 
                                                      ItemsSource="{Binding GroupedDeviceProducts}"
                                                      CanUserReorderColumns="False" 
                                                      CanUserAddRows="False"
                                                      CanUserResizeRows="False"
                                                      CanUserDeleteRows="False"
                                                      AutoGenerateColumns="False"
                                                      SelectionMode="Single"
                                                      SelectionUnit="FullRow">
                                                <DataGrid.Columns>
                                                    
                                                    <DataGridTemplateColumn Width="Auto">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox Name="DeviceProductCbRow" 
                                                                          HorizontalAlignment="Center"
                                                                          IsChecked="{Binding Path=checkStatus, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                                          Click="DeviceProductCbRow_Click"
                                                                          />
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    
                                                    <DataGridTemplateColumn 
                                                        Width="Auto" 
                                                        Header="Id"
                                                        Visibility="Visible">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                                               Text="{Binding Path=productId}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    
                                                    <DataGridTemplateColumn Width="*" >
                                                        <DataGridTemplateColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{DynamicResource DevicesManagement_Groupbox_Product_Column_ProductName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.HeaderTemplate>
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{Binding Path=productName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="2">
                                <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_Buffer}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Center">

                                                <Button Name="btn_Refresh_DeviceBuffer"
                                                        Click="Btn_Refresh_DeviceBuffer_Click"
                                                        Width="20" 
                                                        Height="20">
                                                    <iconPacks:PackIconMaterial Kind="Refresh"/>
                                                </Button>
                                                
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid Name="DeviceBuffersListDg" 
                                                      ItemsSource="{Binding GroupedDeviceBuffers}"
                                                      CanUserReorderColumns="False" 
                                                      CanUserAddRows="False"
                                                      CanUserResizeRows="False"
                                                      CanUserDeleteRows="False"
                                                      AutoGenerateColumns="False"
                                                      SelectionMode="Single"
                                                      SelectionUnit="FullRow">
                                                <DataGrid.Columns>
                                                    
                                                    <DataGridTemplateColumn Width="Auto">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox Name="DeviceBufferCbRow" 
                                                                          HorizontalAlignment="Center"
                                                                          IsChecked="{Binding Path=checkStatus, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                                          Click="DeviceBufferCbRow_Click"/>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    
                                                    <DataGridTemplateColumn 
                                                        Width="Auto" 
                                                        Header="Id"
                                                        Visibility="Visible">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                                               Text="{Binding Path=bufferId}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    
                                                    <DataGridTemplateColumn Width="*">
                                                        <DataGridTemplateColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{DynamicResource DevicesManagement_Groupbox_Buffer_Column_BufferName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.HeaderTemplate>
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{Binding Path=bufferName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                    
                                                    <DataGridTextColumn
                                                        Width="Auto" 
                                                        IsReadOnly="False" 
                                                        Binding="{Binding Path=bufferSort, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                        >
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{DynamicResource DevicesManagement_Groupbox_Buffer_Column_BufferSort}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>
                                                    
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center">
                                <Button Name="Btn_Exit_tab1" 
                                        Width="Auto" 
                                    Height="25"
                                    Padding="5 0"
                                    Margin="10 0"
                                        Content="{DynamicResource DevicesManagement_Button_Exit}"
                                        Click="Btn_Exit_Device_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="{DynamicResource DevicesManagement_TabItem_Device}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_Device}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Center">
                                                <Button Name="btn_Add_Device"
                                                        Click="Btn_Add_Device_Click"
                                                        Margin="5 0 0 0"
                                                        Width="20" 
                                                        Height="20">
                                                    <iconPacks:PackIconMaterial Kind="Plus"/>
                                                </Button>
                                                <Button Name="btn_Delete_Device"
                                                        Click="Btn_Delete_Device_Click"
                                                        Margin="5 0 0 0"
                                                        Width="20" 
                                                        Height="20">
                                                    <iconPacks:PackIconMaterial Kind="Delete"/>
                                                </Button>
                                                <Button Name="btn_Refresh_Device2"
                                                        Click="Btn_Refresh_Device_Click"
                                                        Margin="5 0 0 0"
                                                        Width="20" 
                                                        Height="20">
                                                    <iconPacks:PackIconMaterial Kind="Refresh"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <DataGrid Name="DevicesListDg2" 
                                                      ItemsSource="{Binding GroupedDevices}"
                                                      CanUserReorderColumns="False" 
                                                      CanUserAddRows="False"
                                                      CanUserResizeRows="False"
                                                      CanUserDeleteRows="False"
                                                      AutoGenerateColumns="False"
                                                      SelectionMode="Single"
                                                      SelectionUnit="FullRow">
                                                <DataGrid.Columns>

                                                    <DataGridTemplateColumn Width="Auto" 
                                                                            Header="Id" Visibility="Visible">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                                               Text="{Binding Path=deviceId}">

                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTextColumn
                                                        Width="*"
                                                        IsReadOnly="False"
                                                        Binding="{Binding Path=deviceName}">
                                                        <DataGridTextColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{DynamicResource DevicesManagement_Groupbox_Device_Column_DeviceName}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTextColumn.HeaderTemplate>
                                                    </DataGridTextColumn>

                                                    <DataGridTemplateColumn Width="Auto">
                                                        <DataGridTemplateColumn.HeaderTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{DynamicResource DevicesManagement_Groupbox_Device_Column_ImageDeviceUrl}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.HeaderTemplate>
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock
                                                                        Text="{Binding Path=imageDeviceUrl}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Width="Auto" 
                                                                            Header="ImageUrlOld"
                                                                            Visibility="Hidden">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center"
                                                                               Text="{Binding Path=imageDeviceUrlOld}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                    <DataGridTemplateColumn Width="Auto" 
                                                                            Header="pathFile"
                                                                            Visibility="Hidden">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <TextBlock HorizontalAlignment="Center" 
                                                                               Text="{Binding Path=pathFile, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>

                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="80"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_DevicePalletData}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"></RowDefinition>
                                                <RowDefinition ></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,0,0">
                                                    <StackPanel Orientation="Horizontal" 
                                                                HorizontalAlignment="Right">
                                                        <Label VerticalAlignment="Center" 
                                                               Content="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Bay}"/>
                                                        <TextBox Name="MaxBaytb" 
                                                                 Width="40"
                                                                 Height="17"
                                                                 PreviewTextInput="MaxBaytb_PreviewTextInput"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" 
                                                                HorizontalAlignment="Right">
                                                        <Label VerticalAlignment="Center" 
                                                               Content="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Row}"/>
                                                        <TextBox Name="MaxRowtb" 
                                                                 Width="40"
                                                                 Height="17"
                                                                 PreviewTextInput ="MaxRowtb_PreviewTextInput"/>
                                                    </StackPanel>
                                                    <Button Name="btn_Apply" 
                                                            Margin="20,0,0,0"
                                                            Height="20" Width="25"
                                                            Click="Btn_Apply_DeviceBufferData_Click">
                                                        <iconPacks:PackIconMaterial Kind="Check"/>
                                                    </Button>
                                                    <Button Name="btn_Save_DevicePallet" 
                                                            Margin="20,0,0,0"
                                                            Height="20" Width="25"
                                                            Click="Btn_Save_DevicePallet_Click">
                                                        <iconPacks:PackIconMaterial Kind="ContentSave"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <DataGrid Name="DevicePalletsListDg" 
                                                          ItemsSource="{Binding GroupedDevicePallets}"
                                                          CanUserReorderColumns="False" 
                                                          CanUserAddRows="False"
                                                          CanUserResizeRows="False"
                                                          CanUserDeleteRows="False"
                                                          AutoGenerateColumns="False"
                                                          SelectionMode="Single"
                                                          SelectionUnit="FullRow">
                                                    <DataGrid.Columns>
                                                        <DataGridTemplateColumn Width="Auto" 
                                                                                Header="DeviceId" Visibility="Hidden">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock HorizontalAlignment="Center" 
                                                                                   Text="{Binding Path=deviceId}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn Width="Auto" 
                                                                                Header="Id"  Visibility="Visible">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock HorizontalAlignment="Center" 
                                                                                   Text="{Binding Path=devicePalletId}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        
                                                        <DataGridTextColumn
                                                            Width="Auto" 
                                                            IsReadOnly="True"
                                                            Binding="{Binding Path=row}">
                                                            <DataGridTextColumn.HeaderTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock
                                                                            Text="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Column_Row}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTextColumn.HeaderTemplate>
                                                        </DataGridTextColumn>
                                                        
                                                        <DataGridTextColumn
                                                            Width="Auto" 
                                                            IsReadOnly="True"
                                                            Binding="{Binding Path=bay}">
                                                            <DataGridTextColumn.HeaderTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock
                                                                            Text="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Column_Bay}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTextColumn.HeaderTemplate>
                                                        </DataGridTextColumn>

                                                        <DataGridTemplateColumn Width="*">
                                                            <DataGridTemplateColumn.HeaderTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock
                                                                            Text="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Column_DevicePalletName}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.HeaderTemplate>
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock HorizontalAlignment="Center" 
                                                                                   Text="{Binding Path=devicePalletName}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>

                                                        <DataGridTextColumn
                                                            Width="*" 
                                                            IsReadOnly="True"
                                                            Visibility="Visible"
                                                            Binding="{Binding Path=dataPallet}">
                                                            <DataGridTextColumn.HeaderTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel>
                                                                        <TextBlock
                                                                            Text="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Column_DataPallet}"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </DataGridTextColumn.HeaderTemplate>
                                                            <DataGridTextColumn.ElementStyle>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                                </Style>
                                                            </DataGridTextColumn.ElementStyle>
                                                            <DataGridTextColumn.EditingElementStyle>
                                                                <Style TargetType="TextBox">
                                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                                    <Setter Property="AcceptsReturn" Value="true" />
                                                                </Style>
                                                            </DataGridTextColumn.EditingElementStyle>
                                                        </DataGridTextColumn>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </Grid>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <Grid>
                                            <StackPanel Orientation="Vertical">
                                                <Grid Margin="0 4 0 0">
                                                    <StackPanel Orientation="Horizontal" 
                                                                HorizontalAlignment="Center">
                                                        <StackPanel Orientation="Horizontal" 
                                                                    HorizontalAlignment="Left">
                                                            <Label VerticalAlignment="Center"
                                                                   Content="{DynamicResource DevicesManagement_Groupbox_DevicePallet_Position}" FontSize="16"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" 
                                                                    HorizontalAlignment="Center">
                                                            <Label VerticalAlignment="Center" 
                                                                   Content="X" FontSize="12"/>
                                                            <TextBox Name="palletLineX" 
                                                                     Width="35"
                                                                     Height="17"
                                                                     PreviewTextInput="PalletLine_PreviewTextInput"></TextBox>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" 
                                                                    HorizontalAlignment="Center">
                                                            <Label VerticalAlignment="Center" 
                                                                   Content="Y" FontSize="12"/>
                                                            <TextBox Name="palletLineY" 
                                                                     Width="35" 
                                                                     Height="17"
                                                                     PreviewTextInput="PalletLine_PreviewTextInput"></TextBox>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" 
                                                                    HorizontalAlignment="Center">
                                                            <Label VerticalAlignment="Center" 
                                                                   Content="A" FontSize="12"/>
                                                            <TextBox Name="palletLineA" 
                                                                     Width="35"
                                                                     Height="17"
                                                                     PreviewTextInput="PalletLine_PreviewTextInput"></TextBox>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid Margin="0 4 0 0">
                                                    <StackPanel Orientation="Horizontal" 
                                                                HorizontalAlignment="Center">
                                                        <StackPanel Orientation="Horizontal" 
                                                                    HorizontalAlignment="Left">
                                                            <Label VerticalAlignment="Center" 
                                                                   Content="Pallet:" FontSize="12"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" 
                                                                    HorizontalAlignment="Center">
                                                            <Label VerticalAlignment="Center" 
                                                                   Content="D" FontSize="12"/>
                                                            <TextBox Name="palletPalletD" 
                                                                     Width="35" 
                                                                     Height="17"
                                                                     PreviewTextInput="PalletLine_PreviewTextInput"></TextBox>
                                                        </StackPanel>
                                                        <StackPanel VerticalAlignment="Center">
                                                            <Button Name="btn_SetPalletDataPallet"
                                                                    Margin="15,0,0,0"
                                                                    Height="20" Width="25"
                                                                    Click="Btn_SetPalletDataPallet_Click">
                                                                <iconPacks:PackIconMaterial Kind="ContentSave"/>
                                                            </Button>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>


                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center">
                                <Button Name="Btn_Save_DevicePallet" 
                                        Width="Auto" 
                                        Height="25"
                                        Padding="5 0"
                                        Margin="10 0"
                                        Content="{DynamicResource DevicesManagement_Button_Save}"
                                        Click="Btn_Save_Devices_Click"/>
                                <Button Name="Btn_Exit_DevicePallet" 
                                        Width="Auto" 
                                        Height="25"
                                        Padding="5 0"
                                        Margin="10 0"
                                        Content="{DynamicResource DevicesManagement_Button_Exit}"
                                        Click="Btn_Exit_DevicePallet_Click"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="{DynamicResource DevicesManagement_TabItem_Product}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <GroupBox Header="{DynamicResource DevicesManagement_Groupbox_Product}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"></RowDefinition>
                                            <RowDefinition ></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Center">
                                                <Button Name="btn_Add_Product"
