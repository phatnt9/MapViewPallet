<Window x:Class="MapViewPallet.MiniForm.MicsWpfForm.AddUserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapViewPallet.MiniForm.MicsWpfForm"
        mc:Ignorable="d"
        Title="AddUserForm" 
        Height="310" 
        Width="350" 
        MaxHeight="310" 
        MaxWidth="350" 
        MinHeight="310" 
        MinWidth="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            >
                    <TextBlock Text="Tạo mới người dùng"
                               Name="functionTextBlock"
                               FontSize="20"
                               FontWeight="DemiBold"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel Orientation="Vertical" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,6,0,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Label VerticalAlignment="Center" 
                               Content="Tên đăng nhập"
                               FontSize="14"></Label>
                        <TextBox Name="userNametb" 
                             Width="200" 
                             Height="25" 
                             Margin="10"
                             ></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Label VerticalAlignment="Center" 
                               Content="Mật khẩu"
                               FontSize="14"></Label>
                        <TextBox Name="userPasswordtb" 
                             Width="200" 
                             Height="25" 
                             Margin="10"
                             ></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Label VerticalAlignment="Center" 
                               Content="Phân quyền"
                               FontSize="14"></Label>
                        <ComboBox Width="200" 
                                  Height="25" 
                                  Margin="10"
                                  Name="cmbAuthor"
                                  SelectionChanged="CmbAuthor_SelectionChanged"
                                  DisplayMemberPath="userAuthorName"
                                  SelectedValuePath="userAuthor">

                            <!--SelectedValue="{Binding userAuthor, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"-->

                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Label VerticalAlignment="Center" 
                               Content="Thiết bị"
                               FontSize="14"></Label>
                        <ComboBox Width="200" 
                                  Height="25" 
                                  Margin="10"
                                  Name="cmbDevice"
                                  DisplayMemberPath="deviceName"
                                  SelectedValuePath="deviceId"
                                  >
                            <!--SelectedValue="{Binding deviceId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"-->
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Width="300" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Button Name="btn_save" Width="90" 
                                Height="25" 
                                FontSize="13"
                                Content="Lưu"
                                Click="Btn_save_Click"></Button>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Button Name="btn_exit" Width="90" 
                                Height="25" 
                                FontSize="13"
                                Content="Thoát"
                                Click="Btn_exit_Click"></Button>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
